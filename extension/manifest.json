{
  "name": "GitHub Actions Dashboard",
  "version": "0.1.0",
  "description": "Dashboard for monitoring GitHub Actions workflows metrics.",
  "manifest_version": 3,

  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://github.com/*"],

  "background": {
    "service_worker": "src/background.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000 ws://localhost:3000"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/contentScript.js"],
      "run_at": "document_end",
      "all_frames": false    
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/dashboard/dashboard.html",
        "src/styles/dashboardStyles.css",
        "react_page/*",
        "src/assets/dashboard.png"
      ],
      "matches": ["https://github.com/*"],
      "use_dynamic_url": true   
    }
  ],

  "action": {
    "default_title": "My GitHub Actions Metrics Dashboard",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/dashboard.png",
      "24": "src/assets/dashboard.png",
      "32": "src/assets/dashboard.png"
    }
  }
}
